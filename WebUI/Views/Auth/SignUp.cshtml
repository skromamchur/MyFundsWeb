@model WebUI.Models.CreateUserViewModel
@{
    ViewData["Title"] = "Sign up";
}

<link rel="stylesheet" href="~/css/auth.css" />


<div class="card">
    <h2 class="card__title">Create new account</h2>
    <form asp-antiforgery="true" asp-controller="Auth" asp-action="CreateUser" method="post">
        <div class="card__input-group">
            <label class="card__label" for="email">Login</label>
            <input class="card__input" id="email" asp-for="Login">
            <span class="card__error-message" asp-validation-for="Login"></span>
        </div>
        <div class="card__input-group">
            <label class="card__label" for="password">Password</label>
            <input class="card__input" type="password" id="password" asp-for="Password">
            <span class="card__error-message" asp-validation-for="Password"></span>
        </div>
        <div class="card__input-group">
            <label class="card__label" for="password">Confirm Password</label>
            <input class="card__input" type="password" id="password" asp-for="ConfirmPassword">
            <span class="card__error-message" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <a class="card__link" asp-controller="Auth" asp-action="Index">Already have an account?</a>
        </div>
        <button class="card__submit" type="submit">Sign up</button>
    </form>
</div>


@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}